{
  "name": "solophp/router",
  "type": "library",
  "description": "A high-performance PHP router with middleware support, route groups, named routes, and advanced optional segment patterns.",
    "keywords": [
    "router",
    "routing",
    "php-router",
    "middleware",
    "route-groups",
    "named-routes",
    "php8",
    "psr-4"
    ],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
            "email": "vedastudio@gmail.com",
            "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\Router\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solo\\Router\\Test\\": "tests/"
    }
  },
  "require": {
        "php": ">=8.1",
        "solophp/contracts": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.4",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^2.0"
  },
  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyze src/",
    "cs": "phpcs --standard=PSR12 src/ tests/",
    "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
